@startuml
abstract class User {
    id: Long
    name : String
    email: String
    phone: String
}   

class Freelancer {
    active: boolean 
    category: String
}

class Client {
     company: String
}


class TechnologyType {
    idType: String
    name: String
}


class Project {
    id: Long
    category: String
    date: LocalDate
    endDate: LocalDate
    budget: Decimal
    status: WORKING | OPEN | CLOSED
    description: String

}

class Profile {
    description: String
    hourlyRate: Decimal
}

class Rating {
    value: Double
    comment: String
}


class Admin {
    permissions: List<String>
}

User              <|--             Client
User              <|--             Freelancer
User              <|--             Admin
Project      o--  "0.*"   TechnologyType
Profile      o--  "0.*"   TechnologyType
Project "0..*"   -l-     "0..1"  Client            : has ->
Project "0..*"   -r-     "0..*"  Freelancer      : <- has
Freelancer *-- "0..1" Profile
Profile o--> "0..*" Rating
Client "0..1" -r- "0..*" Rating
@enduml
