@startuml
abstract class User {
    id: Long
    name : String
    email: String
    phone: String
    photo: Image
}   

class Freelancer {
    status: boolean 
    membership: integer
    category: String
}

class Chat {
    id: Long
    time: timestamp
    content: String
}

class Client {
     company: String
     membership: integer
}


class TechnologyType {
    id: Long
    name: String
}


class Project {
    id: Long
    category: String
    date: LocalDate
    endDate: LocalDate
    budget: Decimal
    status: WORKING | OPEN | CLOSED
    description: String

}

class Profile {
    description: String
    hourlyRate: Decimal
}

class Rating {
    value: Double
    comment: String
}


class Language {
    id: Long
    name: String
}

class Admin {
    permissions: List<String>
}

User              <|--             Client
User              <|--             Freelancer
User              <|--             Admin
Project      o--  "0.*"   TechnologyType
Profile  o--  "0.*"   TechnologyType
Project "0..*"   -l-     "0..1"  Client            : has ->
Project "0..*"   -r-     "0..*"  Freelancer      : <- has
Freelancer *-- "0..1" Profile
Freelancer "0..*"   -r-     "1..*"  Language           : has ->
Profile o--> "0..*" Rating
Project "0..1" -- "0..*" Rating
Chat "0..*"   --     "0..1"  Client
Chat "0..*"   --     "0..1"  Freelancer
@enduml
